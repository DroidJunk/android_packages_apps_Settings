<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
        android:title="@string/statusbar_settings"
        xmlns:settings="http://schemas.android.com/apk/res/com.android.settings">

	<CheckBoxPreference 
		android:key="toggles_show_toggles"
		android:summaryOn="Toggles are on"
		android:summaryOff="Toggles are off"
		android:title="Show Toggles" 
		android:defaultValue="true"	/>

	<CheckBoxPreference 
		android:layout="?android:attr/preferenceLayoutChild"
		android:dependency="toggles_show_toggles"
		android:key="toggles_top"
		android:summaryOn="Toggles are on the top"
		android:summaryOff="Toggles are on the bottom"
		android:title="Toggle Location Top" 
		android:defaultValue="true"	/>

	<com.android.settings.ColorPickerPreference 
		android:layout="?android:attr/preferenceLayoutChild"
		android:dependency="toggles_show_toggles"
		android:key="toggle_color"
		android:title="Toggle Color"
		android:summary="Color for toggles"
		android:defaultValue="#ff000000" 
		alphaSlider="true" /> 

	<CheckBoxPreference 
		android:layout="?android:attr/preferenceLayoutChild"
		android:dependency="toggles_show_toggles"
		android:key="toggle_show_indicator"
		android:summaryOn="Toggle indicators are on"
		android:summaryOff="Toggle indicators are off"
		android:title="Toggle Indicators" 
		android:defaultValue="false"	/>
		
	<com.android.settings.ColorPickerPreference 
		android:layout="?android:attr/preferenceLayoutChild"
		android:dependency="toggle_show_indicator"
		android:key="toggle_ind_on_color"
		android:title="Toggle On Indicator Color"
		android:summary="Color for toggles indicator (on)"
		android:defaultValue="#ffffbb33" 
		alphaSlider="false" /> 
		
	<com.android.settings.ColorPickerPreference
		android:layout="?android:attr/preferenceLayoutChild" 
		android:dependency="toggle_show_indicator"
		android:key="toggle_ind_off_color"
		android:title="Toggle Off Indicator Color"
		android:summary="Color for toggles indicator (off)"
		android:defaultValue="#ff757575" 
		alphaSlider="false" /> 		

		
	<CheckBoxPreference 
		android:layout="?android:attr/preferenceLayoutChild" 
		android:key="toggle_show_text"
		android:dependency="toggles_show_toggles"
		android:summaryOn="Toggles text is on"
		android:summaryOff="Toggles text is off"
		android:title="Toggle Text" 
		android:defaultValue="false" />

	<com.android.settings.ColorPickerPreference 
		android:layout="?android:attr/preferenceLayoutChild"
		android:dependency="toggle_show_text"
		android:key="toggle_text_on_color"
		android:title="Toggle Text On Color"
		android:summary="Color for toggle on text"
		android:defaultValue="#ffffbb33" 
		alphaSlider="false" />

	<com.android.settings.ColorPickerPreference 
		android:layout="?android:attr/preferenceLayoutChild"
		android:dependency="toggle_show_text"
		android:key="toggle_text_off_color"
		android:title="Toggle Text Off Color"
		android:summary="Color for toggle off text"
		android:defaultValue="#ff757575" 
		alphaSlider="false" />
		
	<CheckBoxPreference
		android:layout="?android:attr/preferenceLayoutChild"  
		android:dependency="toggles_show_toggles"
		android:key="toggle_show_divider"
		android:summaryOn="Toggle dividers are on"
		android:summaryOff="Toggles dividers are off"
		android:title="Toggle Dividers" 
		android:defaultValue="true"	/>

	<com.android.settings.ColorPickerPreference 
		android:layout="?android:attr/preferenceLayoutChild"
		android:dependency="toggle_show_divider"
		android:key="toggle_divider_color"
		android:title="Toggle Divider Color"
		android:summary="Color for toggle dividers"
		android:defaultValue="#ff757575" 
		alphaSlider="false" />




</PreferenceScreen>

